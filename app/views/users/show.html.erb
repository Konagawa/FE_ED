<%= provide(:title, @user.name) %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0"><%= @user.name %>の詳細</h2>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-8">
              <p><strong>ユーザー名:</strong> <%= @user.name %></p>
              <p><strong>メールアドレス:</strong> <%= @user.email %></p>
              <p><strong>登録日:</strong> <%= @user.created_at.strftime("%Y年%m月%d日") %></p>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to '編集', edit_user_path(@user), class: 'btn btn-warning' if current_user == @user %>
          <%= link_to '戻る', microposts_path, class: 'btn btn-secondary' %>
            | <%= link_to "削除", @user, class: 'btn btn-danger' ,
                                        data: { "turbo-method": :delete,
                                        turbo_confirm: "本当に削除してよろしいですか?" }  if current_user == @user%>

        </div>
      </div>
    </div>
  </div>
</div>
