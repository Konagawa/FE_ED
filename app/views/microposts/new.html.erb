<%= provide(:title, '投稿作成')%>
<h1>投稿作成</h1>

<%= form_with(model: @post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "投稿する", class: "btn btn-primary" %>
  </div>
<% end %>
