<%= provide(:title, @post.user.name + "の投稿") %>

<div class="container mt-5">
  <h1 class="mb-4"><%= @post.user.name %>の投稿</h1>
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <div class="card-text">
        <%= @post.content %>
      </div>
    </div>
  </div>
  <% if current_user == @post.user %>
    <%= link_to '編集', edit_micropost_path, class: 'btn btn-primary' %>
    <%= link_to "削除", @post, class: 'btn btn-danger' ,
                              data: { "turbo-method": :delete,
                              turbo_confirm: "本当に削除してよろしいですか?" } %>
    <%= render 'favorites/favorite', post: @post %>
  <% end %>
  <%= link_to '戻る', microposts_path, class: 'btn btn-secondary' %>
</div>
