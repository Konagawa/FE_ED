<% if logged_in? %>
  <%= turbo_frame_tag dom_id(post, :favorite) do %>
    <% favorited = post.favorited_by?(current_user) %>
    <% method = favorited ? :delete : :post %>
    <% path = micropost_favorites_path(post) %>
    <%= button_to path, method: method, data: { turbo_frame: dom_id(post, :favorite) }, class: "btn btn-light" do %>
      <i class="fas fa-heart text-lg" aria-hidden="true" style="<%= 'color: red;' if favorited %>"></i>
      <%= post.favorites.count %>
    <% end %>
  <% end %>
<% end %>
