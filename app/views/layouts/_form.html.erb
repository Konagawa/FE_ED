    <%= bootstrap_form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.text_field :name, label: "名前" %>

      <%= f.email_field :email, label: "メールアドレス" %>

      <%= f.password_field :password, label: "パスワード" %>

      <%= f.password_field :password_confirmation, label: "パスワード再確認" %>

      <%= f.primary("登録") %>
    <% end %>
